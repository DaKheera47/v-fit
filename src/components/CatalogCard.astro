---
import ItemSizeSelector from './ItemSizeSelector';
import { Button } from './ui/button';
import { FancyButton } from './ui/fancy-button';

interface Props {
  id: string;
  name: string;
  description: string;
  price: number;
  image: string;
  category: string;
  stock: number;
  rating: number;
  reviews: {
    user: string;
    comment: string;
    rating: number;
  }[];
}

const {
  id,
  name,
  description,
  price,
  image,
  category,
  stock,
  rating,
  reviews,
} = Astro.props;
---

<div
  class:list={[
    'bg-gray-to-black relative flex flex-col items-center space-y-4 rounded-lg p-4 ring ring-gray-800 transition-all duration-300 hover:ring-neutral-400',
  ]}
>
  <img
    src={image}
    alt={name}
    class='max-h-64 object-contain'
  />

  <p class='mt-2 text-lg font-medium text-white'>{name}</p>

  <ItemSizeSelector client:load />

  <FancyButton client:load containerClassName='mt-4'>Try it on</FancyButton>

  <Button variant='link'> Add to cart </Button>
</div>

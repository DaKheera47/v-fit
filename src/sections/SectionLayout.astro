---
const { title, subtitle, description } = Astro.props;
---

<section class='mt-80 grid grid-cols-2 pb-20'>
  <div>
    <span
      class='font-bricolage title-text text-3xl font-bold tracking-wide uppercase'
    >
      {subtitle}
    </span>
    <h1
      class='font-bricolage title-text w-full text-9xl leading-31 font-bold text-balance'
      set:html={title}
    />

    <p class='mt-4 w-4/5 text-balance text-gray-400'>{description}</p>
  </div>

  <div class='flex w-full items-center justify-center'>
    <slot />
  </div>
</section>
